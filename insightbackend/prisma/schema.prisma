generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid()) @map("_id")
  email  String @unique
  password String
  date   DateTime @default(now())
  posts Journal[]
}

model Journal {
  id      String @id @default(cuid()) @map("_id")
  title     String
  journal   String
  date      DateTime
  author    User @relation(fields: [authorId], references: [id])
  authorId  String
}